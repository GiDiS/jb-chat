
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: {{ app_name }}-ingress
  annotations:
#    nginx.ingress.kubernetes.io/rewrite-target: /$1
spec:
  rules:
    - host: {{ ingress.host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              serviceName: {{ app_name }}-svc
              servicePort: {{ app_port }}
